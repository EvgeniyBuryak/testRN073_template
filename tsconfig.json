{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "colors": ["./src/styles/colors"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "exclude": [
    "./node_modules/**/*",
    "babel.config.js",
    "metro.config.js",
    "jestSetupFile.js",
    ".eslintrc.js",
    "./src/navigation/Routes.constants.ts"
  ]
}
